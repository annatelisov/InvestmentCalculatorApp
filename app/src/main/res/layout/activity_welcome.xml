<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/setting_IMG_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:padding="20dp"
        android:src="@drawable/gear"/>

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="MyMoney"
        android:textColor="@color/purple_200"
        android:textSize="32sp"/>


    <TextView
        android:id="@+id/textViewWelcomeMSG1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting_IMG_img"
        android:layout_centerInParent="true"
        android:layout_marginTop="32dp"
        android:text="Welcome to your"
        android:textColor="#00008B"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewWelcomeMSG2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewWelcomeMSG1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="money save planing"
        android:textStyle="bold"
        android:textColor="#00008B"
        android:textSize="35sp"/>

    <ImageView
        android:id="@+id/logo_IMG_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:padding="20dp"
        android:layout_below="@id/textViewWelcomeMSG2"
        android:layout_centerHorizontal="true"

        android:src="@drawable/logo"/>


    <Button
        android:id="@+id/buttonStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_IMG_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:textSize="20sp"
        android:text="Click here to start"/>

</RelativeLayout>
